---
export interface Props {
  image: string
}

const { image } = Astro.props
---

<section class="h-screen relative">
  <img src={image} alt="hero" class="absolute inset-0 -z-10 object-cover h-full w-full" />
  <div class="h-full bg-black bg-opacity-80 flex flex-col items-center justify-center"></div>
</section>
